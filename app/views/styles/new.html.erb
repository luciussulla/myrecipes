<%= render 'shared/page_title.html.erb', title: "New Style" %> 

<%= render 'shared/errors.html.erb', obj: @style %> 

<div class="row">
  <div class="well col-md-8 col-md-offset-2">
    <%= form_for(@style) do |f| %> 
        
        <%= f.label :name %> 
        <%= f.text_field :name %> 
        
        <%= f.submit "New style", class: "btn btn-success" %> 
    <% end %> 
  </div>
</div> 

<script type="text/javascript">
  $('#recipe_picture').bind('change', function(){
    size_in_megabytes = this.files[0].size/1024/1024;
    if(size_in_megabytes) > 5 {
      alert('Maximum filesize is 5MB. Please choose a smaller file')
    }
  }); 
</script>  
