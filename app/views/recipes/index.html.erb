<%=  render 'shared/page_title', title: "All Recipes" %> 

<% @recipes.each do |recipe| %> 
  <div class="row">
    
    <div class="col-md-2">  
      <section class="chef-info center">
      <p> <%=  gravatar_for recipe.chef, size: 100 %> </p>
      <h5> <%= recipe.chef.chefname %>   </h5>
      </section>
    </div>
    
    <div class="col-lg-8 well">
      <h4><%= link_to recipe.name, recipe_path(recipe) %> </h4>
      <p><%= recipe.summary %> </p>
      <span class="quiet"><small><%= time_ago_in_words(recipe.created_at) %> ago </small></span>
      <p><%= recipe.description %></p>
      <p><%= recipe.name %> </p>
    </div>  
    
  </div>
<% end %> 